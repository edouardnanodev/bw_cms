{
    "kind": "collectionType",
    "collectionName": "nanodev_blogs",
    "info": {
        "singularName": "nanodev-blog",
        "pluralName": "nanodev-blogs",
        "displayName": "nanodev_blog",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "post_id": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "string",
            "required": true,
            "minLength": 4
        },
        "post_category": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "enumeration",
            "enum": [
                "Tips",
                "Test",
                "Technology",
                "Software",
                "Development",
                "Web"
            ],
            "required": true
        },
        "post_title": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "string",
            "required": true,
            "maxLength": 100
        },
        "post_description": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "string",
            "required": true,
            "maxLength": 250
        },
        "post_image": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "post_content": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "richtext",
            "required": true
        },
        "post_at": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "date",
            "required": true
        },
        "post_author": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "enumeration",
            "enum": [
                "Fabiola TINGO",
                "Junior SIMO",
                "Bill Somen",
                "Christelle BOYOMO",
                "Bruno KENFACK",
                "Elmira DEMANOU",
                "Ghislain MELAH",
                "Thierry LONTSI",
                "Edouard YONGA",
                "Yvan NANFACK"
            ],
            "required": true
        },
        "post_link": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "string",
            "required": true,
            "default": "https://www.nanodev.ca/blog/"
        },
        "post_comment_amt": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "integer",
            "default": 0,
            "required": false
        },
        "post_likes_amt": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "integer",
            "default": 0
        }
    }
}
