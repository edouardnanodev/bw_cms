{
  "kind": "collectionType",
  "collectionName": "nanodev_blogs",
  "info": {
    "singularName": "nanodev-blog",
    "pluralName": "nanodev-blogs",
    "displayName": "nanodev_blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "postID": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "minLength": 4
    },
    "postCategory": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "enumeration",
      "enum": [
        "Tips",
        "Test",
        "Technology",
        "Software",
        "Development",
        "Web"
      ],
      "required": true
    },
    "postTitle": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "maxLength": 20
    },
    "postDescription": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "postImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "required": true
    },
    "postContent": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext",
      "required": true
    },
    "postAt": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "date",
      "required": true
    },
    "postAuthor": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "enumeration",
      "enum": [
        "Fabiola",
        "Junior",
        "Christelle",
        "Bruno",
        "Elmira",
        "Ghislain",
        "Thierry",
        "Edouard"
      ],
      "required": true
    },
    "postLink": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "string",
      "required": true,
      "default": "https://www.nanodev.ca/blog/"
    },
    "postCommentAmt": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "integer",
      "default": 0,
      "required": false
    },
    "postLikesAmt": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "integer",
      "default": 0
    }
  }
}
