{
  "kind": "collectionType",
  "collectionName": "nanodev_blogs",
  "info": {
    "singularName": "nanodev-blog",
    "pluralName": "nanodev-blogs",
    "displayName": "Nanodev_blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "postCategory": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "enumeration",
      "enum": [
        "Code",
        "Technology",
        "Finance",
        "Web",
        "Development",
        "Software",
        "Engineering",
        "Graphics",
        "Devices",
        "Tips"
      ],
      "required": true
    },
    "postTitle": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "maxLength": 20,
      "required": true
    },
    "postDescription": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "postAt": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "date",
      "required": true
    },
    "postAuthor": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "enumeration",
      "enum": [
        "Bruno",
        "Christelle",
        "Elmira",
        "Edouard",
        "Junior",
        "Bill",
        "Thierry",
        "Ghislain"
      ],
      "required": true
    },
    "postURL": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "default": "https://www.nanodev.ca/blog/",
      "unique": false
    },
    "postCommentsAmt": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "integer",
      "default": 0
    },
    "postLikesAmt": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "integer",
      "default": 0
    },
    "postCoverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "postContent": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext",
      "required": true
    },
    "postID": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "minLength": 5
    }
  }
}
